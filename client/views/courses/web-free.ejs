<style type="text/css">
    .banner {
        background-image: url('../images/bgRegis.jpg') !important;
    }

    .header {
        background: #f1f1f1!important;
    }

    .contentBanner h1 {
        color: white;
    }

    .course {
        background: #F3F3F3;
    }

    .registerBtn {
        position: absolute;
        bottom: 100px;
        font-size: 35px;
        width: 100% !important;
        margin-left: 10px !important;
    }

    .contentCourse {
        margin-left: 10px !important;
    }

    .detail-time {
        list-style: none;
        text-align: left;
    }

    .titleCourse {
