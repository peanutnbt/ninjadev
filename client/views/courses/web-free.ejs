        text-shadow: 2px 2px 4px #60849D;
    }

    .title {
        color: #60849D;
        font-size: 18px;
        font-weight: 600;
    }

    ul li {
        position: relative;
        padding-left: 15px;
        list-style: none;
    }

    ul li::before {
        content: "\f105";
        font-family: FontAwesome;
        color: #b2b2b2;
        position: absolute;
        left: 0;
        top: 0px;
    }

    .pd-5 {
        padding: 50px 0;
    }

    hr {
        border-style: dotted;
        font-size: 20px;
    }

    .course b {
        font-weight: 600;
        color: #60849D;
    }

    .course table thead {
        background: #60849D;
        color: white;
    }

    @media screen and (min-width: 350px) {
        .registerBtn {
            width: 250px !important;
        }
        .titleCourse {
            font-size: 28px;
        }
    }

    /*form*/

    #registerForm form {
        padding: 35px 20%;
        background: white;
    }


    #registerForm .modal-header {
        background: #60849D;
        color: white;
    }

    #registerForm .close {
        color: white;
    }

    #registerForm .modal-title {
        text-transform: uppercase;
    }

    #registerForm .modal-body {
        padding: 0px;
        background: #eae6ea;
    }

    .introCourse {
        text-align: center;
        text-transform: uppercase;
        border-bottom: 1px dashed #60849D;
        padding: 15px;
        font-size: 22px;
        font-weight: 600;
        font-family: 'Open Sans';
        color: #674f49;
    }
</style>
